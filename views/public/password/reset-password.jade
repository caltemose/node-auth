extends ../../default

block title
  title #{sitetitle} | Submit a New Password

block content

  h1 Submit a New Password

  p Change the password for user with email: #{email}

  if err
    p.error= err
  
  form(method="POST")
    label
      | Type your new password:
      input(type="password" name="password" maxlength="64" data-validation="required" data-validation-errors="You must supply a new password.") 
      span.error

    input(type="submit" name="submit" value="Update Password")


block scripts
  script(src="/assets/js/auth.validator.js")
  script.
    auth.validator.init([
      $('input[name="password"]')
    ]);
    $('input[type="submit"]').click(function(e) {
      if (!auth.validator.validateForm()) e.preventDefault();
    });