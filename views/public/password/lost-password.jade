extends ../../default

block title
  title #{sitetitle} | Reset Password - Send Email

block content
  h1 Reset Password - Send Email

  form(method="POST")

    if nouser
      p.error There was no user associated with the email you submitted.

    label
      | Enter the email associated with your account: 
      input(type="text" name="email" data-validation="required|email" data-validation-errors="You must enter a valid email address.")
      span.error

    input(type="submit" name="submit" value="Send Password Reset Email")

block scripts
  script(src="/assets/js/auth.validator.js")
  script.
    auth.validator.init([
      $('input[name="email"]')
    ]);
    $('input[type="submit"]').click(function(e) {
      if (!auth.validator.validateForm()) e.preventDefault();
    });